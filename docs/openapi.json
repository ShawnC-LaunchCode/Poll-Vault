{
  "openapi": "3.0.3",
  "info": {
    "title": "DevPulse Surveys (MVP) API",
    "description": "Minimal, extensible API for the DevPulse Surveys MVP.\n- Creator endpoints require an API key (Authorization: Bearer <key>).\n- Response submissions are anonymous (no auth).",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://api.devpulse.local/api/v1",
      "description": "Local dev / pilot server"
    }
  ],
  "paths": {
    "/surveys": {
      "post": {
        "summary": "Create a new survey",
        "operationId": "createSurvey",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SurveyCreateRequest"
              },
              "example": {
                "title": "MVP Feedback",
                "description": "Short survey for early testers",
                "isPublic": true,
                "questions": [
                  {
                    "type": "short_text",
                    "prompt": "What did you try?",
                    "position": 1
                  },
                  {
                    "type": "multiple_choice",
                    "prompt": "Rate clarity",
                    "options": [
                      "Poor",
                      "OK",
                      "Good"
                    ],
                    "position": 2
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Survey created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Survey"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload"
          }
        }
      },
      "get": {
        "summary": "List surveys (creator-scoped)",
        "operationId": "listSurveys",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 50
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of surveys",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Survey"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/surveys/{surveyId}": {
      "get": {
        "summary": "Get survey metadata",
        "operationId": "getSurvey",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Survey object",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Survey"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/surveys/{surveyId}/questions": {
      "post": {
        "summary": "Add a question to a survey",
        "operationId": "addQuestion",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionCreateRequest"
              },
              "example": {
                "type": "multiple_choice",
                "prompt": "Which area has the highest project risk?",
                "options": [
                  "Security",
                  "Performance",
                  "Data Handling"
                ],
                "position": 1
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Question created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Question"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get list of questions for a survey",
        "operationId": "listQuestions",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Questions array",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Question"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/surveys/{surveyId}/responses": {
      "post": {
        "summary": "Submit survey response (anonymous)",
        "operationId": "submitResponse",
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResponseCreateRequest"
              },
              "example": {
                "answers": {
                  "q_001": "I uploaded my dataset",
                  "q_002": "Good"
                },
                "metadata": {
                  "ua": "Mozilla/5.0",
                  "lang": "en-US"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Response accepted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload"
          },
          "429": {
            "description": "Rate limited"
          }
        }
      },
      "get": {
        "summary": "Retrieve responses (creator-only)",
        "operationId": "listResponses",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 100
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of responses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Response"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/surveys/{surveyId}/results": {
      "get": {
        "summary": "Get aggregated results for a survey",
        "operationId": "getResults",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Aggregated results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Results"
                }
              }
            }
          }
        }
      }
    },
    "/surveys/{surveyId}/export": {
      "get": {
        "summary": "Export survey responses (CSV/JSON)",
        "operationId": "exportResponses",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "surveyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fmt",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "csv",
                "json"
              ],
              "default": "csv"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Export link",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string",
                      "format": "uri",
                      "description": "Link to presigned export"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API_KEY",
        "description": "Creator API key. Provide as Authorization: Bearer <API_KEY>"
      }
    },
    "schemas": {
      "Survey": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "createdBy": {
            "type": "string",
            "nullable": true
          },
          "isPublic": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SurveyCreateRequest": {
        "type": "object",
        "required": [
          "title",
          "questions"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "isPublic": {
            "type": "boolean",
            "default": true
          },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/QuestionCreateRequest"
            }
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "surveyId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "short_text",
              "long_text",
              "multiple_choice",
              "file"
            ]
          },
          "prompt": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "position": {
            "type": "integer"
          }
        }
      },
      "QuestionCreateRequest": {
        "type": "object",
        "required": [
          "type",
          "prompt"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "short_text",
              "long_text",
              "multiple_choice",
              "file"
            ]
          },
          "prompt": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "position": {
            "type": "integer"
          }
        }
      },
      "Response": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "surveyId": {
            "type": "string"
          },
          "answers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "submittedAt": {
            "type": "string",
            "format": "date-time"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "ResponseCreateRequest": {
        "type": "object",
        "required": [
          "answers"
        ],
        "properties": {
          "answers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "Results": {
        "type": "object",
        "properties": {
          "surveyId": {
            "type": "string"
          },
          "totals": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "counts": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "freeText": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "responseId": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  },
                  "submittedAt": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}
